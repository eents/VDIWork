<Window x:Class="WPFUserControl2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUserControl2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="lblName">Name</Label>
                <Separator Margin="10"></Separator>
                <TextBlock x:Name="tbName" VerticalAlignment="Center">Fido</TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label x:Name="lblAge">Age</Label>
                <Separator Margin="10"></Separator>
                <TextBlock x:Name="tbAge" VerticalAlignment="Center">2</TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label x:Name="lblWeight">Weight</Label>
                <Separator Margin="10"></Separator>
                <TextBlock x:Name="tbWeight" VerticalAlignment="Center">10</TextBlock>
            </StackPanel>

            <Button x:Name="btnFeed" Click="btnFeed_Click">Feed</Button>
            <Button x:Name="btnWalk" Click="btnWalk_Click">Walk</Button>
        </StackPanel>
    </Grid>
</Window>
